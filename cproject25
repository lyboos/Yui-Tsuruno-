#define  _CRT_SECURE_NO_WARNINGS 
#include<stdio.h>
int main()
{
	int n;
	scanf("%d", &n);
	for (int i = 31; i >=0; i--)
	{
		if (n & (1 << i))
			printf("%d", 1);
		else printf("%d", 0);
	}
	return 0;
}
