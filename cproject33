#include<stdio.h>
int main()
{
	char a[99];
	int n = 0,c=0;
	scanf("%s", a);
	while (a[c]!='\0')
	{
		int b = 0;
		if (a[c] == 'i')
		b++;
		if (a[c + 1] == 'n')
			b++;
		if (a[c + 2] == 't')
			b++;
		if (b == 3)
			n++;
		c++;
	}
	printf("%dä¸ªint", n);
	return 0;
}
